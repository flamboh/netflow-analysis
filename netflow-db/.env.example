# NetFlow Database Configuration Template
# Copy this file to .env and update with your actual values

# Path to the netflow data directory
# This is where the raw netflow files are stored
NETFLOW_DATA_PATH=/path/to/your/netflow/data

# Available routers (comma-separated list)
# These are the router names that will be processed
AVAILABLE_ROUTERS=router1,router2

# Database configuration
DATABASE_PATH=./flowStats.db

# Processing configuration
# Set to True to drop and recreate the database (first run only)
FIRST_RUN=False

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=db_maintenance.log